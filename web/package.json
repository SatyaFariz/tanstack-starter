{
  "name": "thelivintech.com",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "dev:host": "bun dev -- --host",
    "build": "vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint --fix .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "docker-init": "./init-docker.sh",
    "db:dev": "bun docker-init && docker-compose -f db/docker-compose.yml -f db/docker-compose.dev.yml --env-file .env up -d",
    "db:dev:down": "docker-compose -f db/docker-compose.yml -f db/docker-compose.dev.yml --env-file .env down",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:studio": "drizzle-kit studio",
    "drizzle:push": "drizzle-kit push:pg",
    "drizzle:seed": "tsx app/lib/db/seed.ts",
    "better-auth:generate": "npx @better-auth/cli@latest generate --output ./db/schemas/auth.ts"
  },
  "devDependencies": {
    "@storybook/addon-onboarding": "^9.1.0",
    "@storybook/react-vite": "^9.1.0",
    "@stylistic/eslint-plugin": "^5.2.2",
    "@tanstack/eslint-plugin-query": "^5.83.1",
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.0",
    "storybook": "^9.1.0",
    "vite": "^7.0.6",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@tanstack/react-form": "^1.15.2",
    "@tanstack/react-query": "^5.84.1",
    "@tanstack/react-router": "^1.130.12",
    "@tanstack/react-router-with-query": "^1.130.12",
    "@tanstack/react-start": "^1.130.15",
    "better-auth": "^1.3.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.4",
    "pg": "^8.16.3",
    "pocketbase": "^0.26.2",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-aria-components": "^1.11.0",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.5.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "zod": "^3.25.76"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
